<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.draksingh.foodiez.feedback">

    <TextView
        android:id="@+id/aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="68dp"
        android:text="ABOUT US"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/aboutuscontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aboutus"
        android:layout_below="@+id/aboutus"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/aboutus"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aboutuscontent"
        android:layout_below="@id/aboutuscontent"
        android:layout_marginTop="40dp"
        android:text="CONTACT US"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/contactuscontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/contactus"
        android:layout_below="@id/contactus"
        android:layout_marginTop="20dp"
        android:text="@string/contactus"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/developerstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/contactuscontent"
        android:layout_below="@id/contactuscontent"
        android:layout_marginTop="40dp"
        android:text="DEVELOPERS"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/developerstitlecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/developerstitle"
        android:layout_below="@id/developerstitle"
        android:layout_marginTop="20dp"
        android:text="AVIRAJ SINGH \nAKSHAT CHATURVEDI \nANSHUL FATWANI\nDROIDRUSH COORDINATORS"
        android:textStyle="bold"
        android:textSize="15dp"/>



</RelativeLayout>
