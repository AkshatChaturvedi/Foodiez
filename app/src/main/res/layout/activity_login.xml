<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.draksingh.foodiez.LoginActivity">

   <TextView
       android:id="@+id/login"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Login to Enter"
       android:textSize="40dp"
       android:textColor="@color/blue"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="112dp" />
    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg. No."
        android:textSize="25dp"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="25dp"
        android:layout_below="@+id/reg"
        android:layout_alignStart="@+id/reg"
        android:layout_marginTop="22dp" />

 <EditText
     android:id="@+id/e_reg"
     android:layout_width="150dp"
     android:layout_height="wrap_content"
     android:textSize="25dp"
     android:inputType="number"
     android:layout_alignBaseline="@+id/reg"
     android:layout_alignBottom="@+id/reg"
     android:layout_toEndOf="@+id/password"
     android:layout_marginStart="34dp" />


    <EditText
        android:id="@+id/e_password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignStart="@+id/e_reg"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:onClick="proceedToHome"

        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/login"
        android:layout_marginStart="68dp"
        android:layout_marginTop="37dp" />

</RelativeLayout>
